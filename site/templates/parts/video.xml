<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../../units/schema/language.dtd">
<document>
	<cms:desktop>
			<a
				class="video"
				href="url_Make('view', 'dialog_video', array('id', $params['id']))"
				title="$params['title'][$language]"
				cms:eval="href,title"
				>
			</a>
	</cms:desktop>

	<cms:mobile>
			<a
				class="video mobile"
				href="'http://www.youtube.com/watch?v='.$params['video_id']"
				title="$params['title'][$language]"
				cms:eval="href,title"
				>
			</a>
	</cms:mobile>
</document>