<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>
				<div>
					<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
						>
					<cms:text constant="phone"/>
					</a>
					<span class="logo"></span>
				</div>
				<cms:module
					name="articles"
					action="show"
					text_id="header_article"
					/>
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<span><cms:text constant="phone_title"/></span>
					<cms:text constant="phone"/>
				</a>
				<a href="#" class="youtube">
					<span><cms:text constant="video_title"/></span>
				</a>
				<div class="form_wrap">
					<h2><cms:text constant="form_title"/></h2>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</header>
			<!-- About us Section -->
			<div class="wrap">
				<span><cms:text constant="statement"/></span>
				<cms:module
					name="articles"
					action="show"
					text_id="about_article"
					
					/>
			</div>
		</body>
	</html>
</document>
