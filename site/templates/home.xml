<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<header>

				<div>
					<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
						>
					<cms:text constant="phone"/>
					</a>
					<span class="logo"></span>
				</div>

				<cms:module
					name="articles"
					action="show"
					text_id="header_article"
					/>
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<span><cms:text constant="phone_title"/></span>
					<cms:text constant="phone"/>
				</a>
				<!-- youtube dialog -->
				<cms:module
						name="youtube"
						action="show_list"
						text_id="optimal_video"
						template="parts/video.xml"
						/>

				<div class="form_wrap">
					<h2><cms:text constant="form_title"/></h2>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</header>
			<!-- About us Section -->
			<div class="wrap">
				<span><cms:text constant="statement"/></span>
				<cms:module
					name="articles"
					action="show"
					text_id="about_article"
					template="parts/article.xml"

					/>
			</div>
			<!-- Benefits Section -->
			<div class="white">
				<cms:module
					name="articles"
					action="show"
					text_id="benefits1_article"
					template="parts/article.xml"
					/>

				<div class="animation">
				</div>

				<h2><cms:text constant="benefits_title"/></h2>
				<span><cms:text constant="benefit1"/></span>
				<span><cms:text constant="benefit2"/></span>
				<span><cms:text constant="benefit3"/></span>
				<span><cms:text constant="benefit4"/></span>
			</div>
			<!-- Video Section -->
			<div class="blue">
				<h2><cms:text constant="video_section_title"/></h2>
				<cms:module
					name="articles"
					action="show"
					text_id="video_article"
					template="parts/article.xml"
					/>

				<div class="youtube">
					<cms:module
						name="youtube"
						action="show"
						text_id="optimal_video"
						cms:eval="id"
						embed="1"
						width="500"
						height="312"
						player_id="video_player"
						theme="light"
						autohide="0"
						show_related="0"
					/>
				</div>
			</div>
			<!--BOTTOM SECTION  -->
			<div class="bottom">
				<span class="logo"></span>
				<cms:module
					name="articles"
					action="show"
					text_id="bottom_article"
					template="parts/article.xml"
					/>
				<a
					href="'tel:'.urlencode(Language::getText('phone'))"
					cms:eval="href"
					class="phone"
					>
					<span><cms:text constant="phone_title"/></span>
					<cms:text constant="phone"/>
				</a>
				<div class="form_wrap">
					<h2><cms:text constant="form_title"/></h2>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact_form"
						/>
				</div>
			</div>
			<footer>
				<span><cms:text constant="copyright"/></span>
			</footer>
		</body>
	</html>
</document>
